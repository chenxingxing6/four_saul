<!DOCTYPE html>
<html>

<head>
    <title>上饶农商四扫系统</title>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="stylesheet" href="http://cdn.amazeui.org/amazeui/2.7.2/css/amazeui.min.css">
    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://cdn.amazeui.org/amazeui/2.7.2/js/amazeui.min.js" async></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.2/css/swiper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.2/js/swiper.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/bmob.js"></script>
</head>

<body>
    <!-- common header -->
    <header data-am-widget="header" class="am-header am-header-default">
        <div class="am-header-left am-header-nav">
            <a href="javascript:window.history.back();" class="">
                <i class="am-header-icon am-icon-angle-left am-icon-sm"></i>
            </a>
        </div>
        <h1 class="am-header-title">
            <a href="#" class="">商户</a>
        </h1>
    </header>
    <!-- end header -->
    <!-- start contain -->
    <style>

    </style>
    <section class="xb-section">
        <form action="/task/shop/update" method="post" class="am-u-sm-12 xb-form" id="doc-vld-msg">
            <div class="swiper-container swiper-container-horizontal">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="am-form">
                            <fieldset>
                                <legend>第一步：商户基本数据录入</legend>
                                <div class="am-form-group">
                                    <label for="shop_name">商户名称 <b>*</b></label>
                                    <input type="text" class="" id="shop_name" name="shop_name" value="<%= data.shop.shop_name %>" placeholder="" minlength="2" required>
                                </div>
                                <input type="hidden" value="<%= data.shop.id %>" name="id">
                                <div class="am-form-group">
                                    <label for="name">法人姓名 <b>*</b></label>
                                    <input type="text" class="" id="name" name="name" value="<%= data.shop.name %>" placeholder="" minlength="2" required>
                                </div>
                                <div class="am-form-group">
                                    <label for="tel">联系电话 <b>*</b></label>
                                    <input type="number" class="" id="tel" name="tel" value="<%= data.shop.tel %>" placeholder="" minlength="11" maxlength="11" data-validation-message="请输入正确的手机号码" required>
                                </div>
                                <div class="am-form-group">
                                    <label for="card">身份证号 <b>*</b></label>
                                    <input type="text" class="" id="card" name="card" value="<%= data.shop.card %>" placeholder="" minlength="18" maxlength="18" data-validation-message="请输入正确的身份证号" required>
                                </div>
                                <div class="am-form-group">
                                    <label for="passportNum">营业执照编号 <b>*</b></label>
                                    <input type="number" class="" id="passportNum" name="passportNum" value="<%= data.shop.passportNum %>" placeholder="" data-validation-message="请输入正确的营业执照编号" required>
                                </div>
                                <div class="am-form-group">
                                    <div class="am-g">
                                        <div class="am-u-sm-6">
                                            <label for="passport">营业执照 <b>*</b></label>
                                            <input type="hidden" id="passport" name="passport">
                                            <div class="am-g">
                                                <div class="weui-uploader">
                                                    <div class="weui-uploader__bd">
                                                        <ul class="weui-uploader__files" id="uploaderFiles1" style="margin: 0;padding-left: 0;">
                                                            <li class="weui-uploader__file" style="background-image:url('http://srnswx.huahuayu.com.cn/srnswx/images/<%= data.shop.passport %>')"></li>
                                                        </ul>
                                                        <div class="weui-uploader__input-box">
                                                            <input id="uploaderInput1" class="weui-uploader__input" type="button">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="am-u-sm-6">
                                            <label for="shop_img">商铺情况 <b>*</b></label>
                                            <input type="hidden" id="shop_img" name="shop_img">
                                            <div class="am-g">
                                                <div class="weui-uploader">
                                                    <div class="weui-uploader__bd">
                                                        <ul class="weui-uploader__files" id="uploaderFiles2" style="margin: 0;padding-left: 0;">
                                                            <li class="weui-uploader__file" style="background-image:url('http://srnswx.huahuayu.com.cn/srnswx/images/<%= data.shop.shop_img %>')"></li>
                                                        </ul>
                                                        <div class="weui-uploader__input-box">
                                                            <input id="uploaderInput2" class="weui-uploader__input" type="button">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="am-form-group">
                                    <label for="shop_address">经营地址 <b>*</b></label>
                                    <input type="text" class="" id="shop_address" name="shop_address" placeholder="" data-validation-message="请输入正确的经营地址" required>
                                    <input type="hidden" id="area" name="area" value="<%= data.shop.area %>">
                                </div>
                                <div class="am-form-group">
                                    <label for="shop_year">经营年限</label>
                                    <input type="number" class="" id="shop_year" name="shop_year" value="<%= data.shop.shop_year %>" placeholder="">
                                </div>
                                <div class="am-form-group">
                                    <label for="shop_state">经营场所情况</label>
                                    <input type="text" class="" id="shop_state" value="<%= data.shop.shop_state %>" style="display: none;">
                                    <select name="shop_state" required data-am-selected="{btnWidth: '100%', btnSize: 'md'}">
                                        <option value="1" <%=( data.shop.shop_state == "自有") ? "selected" : "" %> > 自有
                                        </option>
                                        <option value="0" <%=( data.shop.shop_state == "租赁") ? "selected" : "" %> > 租赁
                                        </option>
                                    </select>
                                </div>
                                <div class="am-form-group">
                                    <label for="income">年营业额（万元）</label>
                                    <input type="number" class="" id="income" name="income" value="<%= data.shop.income %>" placeholder="" data-validation-message="请输入正确的年营业额">
                                </div>
                                <div class="am-form-group">
                                    <label for="high_authority">上级主管部门</label>
                                    <input type="text" class="" id="high_authority" name="high_authority" value="<%= data.shop.high_authority %>">
                                </div>
                                <div class="am-form-group">
                                    <label for="person_in_charge">行业协会负责人</label>
                                    <input type="text" class="" id="person_in_charge" name="person_in_charge" value="<%= data.shop.person_in_charge %>">
                                </div>
                                <div class="am-form-group">
                                    <label for="industry">商户类型</label>
                                    <div class="am-sm-u-12" id="industry">
                                        <select name="industry" required data-am-selected="{btnWidth: '100%', btnSize: 'md', searchBox: 1}">
                                            <% for(var i=0;i<industry.length;i++){ %>
                                                <option value="<%= industry[i].id %>" <%=( data.shop.industry==industry[i].id) ? "selected" : "" %> >
                                                    <%= industry[i].industryName %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="am-g">
                                    <div class="am-u-sm-4 am-u-sm-offset-4 am-text-center">
                                        <button type="button" class="am-btn xb-btn-green xb-btn-next">下一步</button>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="am-form">
                            <fieldset>
                                <legend>第二步：金融产品选择</legend>
                                <div class="am-form-group">
                                    <h3>1.已有他行金融产品或金融服务（多选）</h3>
                                    <% if(service.exsit_service){ %>
                                        <% for(var i=0; i<service.exsit_service.length; i++){ %>
                                            <label class="am-checkbox am-success">
                                                <input type="checkbox" value="<%= service.exsit_service[i].id %>" data-id="<%= service.exsit_service[i].serviceName %>" data-am-ucheck name="exsit_service" <% for(var j=0; j<data.service.value.exsit.length; j++){%>
                                                <% if(data.service.value.exsit[j] == service.exsit_service[i].id){ %>
                                                    checked
                                                    <% } %>
                                                        <% } %>
                                                            >
                                                            <%= service.exsit_service[i].serviceName %>
                                            </label>
                                            <% } %>
                                                <% } %>
                                </div>
                                <div class="am-form-group">
                                    <h3>2.本次营销我行金融服务（多选）</h3>
                                    <% if(service.handle_service){ %>
                                        <% for(var i=0; i<service.handle_service.length; i++){ %>
                                            <label class="am-checkbox am-success">
                                                <input type="checkbox" value="<%= service.handle_service[i].id %>" data-id="<%= service.handle_service[i].serviceName %>" data-am-ucheck name="handle_service" <% for(var j=0; j<data.service.value.handle.length; j++){%>
                                                <% if(data.service.value.handle[j] == service.handle_service[i].id){ %>
                                                    checked
                                                    <% } %>
                                                        <% } %>
                                                            >
                                                            <%= service.handle_service[i].serviceName %>
                                            </label>
                                            <% } %>
                                                <% } %>
                                </div>
                                <div class="am-form-group">
                                    <h3>3.意向我行金融服务（多选）</h3>
                                    <% if(service.intention_service){ %>
                                        <% for(var i=0; i<service.intention_service.length; i++){ %>
                                            <label class="am-checkbox am-success">
                                                <input type="checkbox" value="<%= service.intention_service[i].id %>" data-id="<%= service.intention_service[i].serviceName %>" data-am-ucheck name="intention_service" <% for(var j=0; j<data.service.value.intention.length; j++){%>
                                                <% if(data.service.value.intention[j] == service.intention_service[i].id){ %>
                                                    checked
                                                    <% } %>
                                                        <% } %>
                                                            >
                                                            <%= service.intention_service[i].serviceName %>
                                            </label>
                                            <% } %>
                                                <% } %>
                                </div>
                                <div class="am-g">
                                    <div class="am-u-sm-4 am-u-sm-offset-2 am-text-center">
                                        <button type="button" class="am-btn xb-btn-green xb-btn-prev">上一步</button>
                                    </div>
                                    <div class="am-u-sm-4 am-u-end am-text-center">
                                        <button type="button" class="am-btn xb-btn-green xb-btn-next">下一步</button>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="am-form">
                            <fieldset>
                                <legend>第三步：营销记录</legend>
                                <div class="am-g xb-record">
                                    <% for(var i=0; i<data.record.length; i++){ %>
                                        <div class="am-u-sm-12 xb-record-item">
                                            <div class="am-u-sm-12 xb-record-group">
                                                <span>操作人：</span>
                                                <span><%= data.record[i].name %></span>
                                            </div>
                                            <div class="am-u-sm-12 xb-record-group">
                                                <span>操作时间：</span>
                                                <span><%= data.record[i].time %></span>
                                            </div>
                                            <div class="am-u-sm-12 xb-record-group">
                                                <span>操作内容：</span>
                                                <span><%= data.record[i].content %></span>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="am-g" style="margin-top: 10px;">
                                    <div class="am-u-sm-4 am-u-sm-offset-2 am-text-center">
                                        <button type="button" class="am-btn xb-btn-green xb-btn-prev">上一步</button>
                                    </div>
                                    <div class="am-u-sm-4 am-u-end am-text-center">
                                        <button type="button" class="am-btn xb-btn-green xb-btn-next">下一步</button>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="am-form">
                            <fieldset>
                                <legend>第四步：营销日志</legend>
                                <div class="am-form-group">
                                    <textarea id="shop_detail" name="shop_detail" class="am-textarea" value="<%= data.shop.shop_detail %>" rows="15" placeholder="在这里记录对商户的营销信息或你的营销情况"><%= data.shop.shop_detail %></textarea>
                                </div>
                                <div class="am-g">
                                    <div class="am-u-sm-4 am-u-sm-offset-2 am-text-center">
                                        <button type="button" class="am-btn xb-btn-green xb-btn-prev">上一步</button>
                                    </div>
                                    <div class="am-u-sm-4 am-u-end am-text-center">
                                        <button type="submit" class="am-btn xb-btn-green">提&nbsp;交</button>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="swiper-pagination swiper-pagination-progress"></div>
                <div class="swiper-button-prev" style="display: none;"></div>
                <div class="swiper-button-next" style="display: none;"></div>
            </div>
        </form>
        <script>
        var swiper = new Swiper('.swiper-container', {
            initialSlide: 0,
            hashnav: true,
            hashnavWatchState: true,
            pagination: '.swiper-pagination',
            paginationType: 'progress',
            prevButton: '.swiper-button-prev',
            nextButton: '.swiper-button-next'
        })
        var prevButton = document.querySelector('.swiper-button-prev');
        var nextButton = document.querySelector('.swiper-button-next');
        var btnNext = document.querySelectorAll('.xb-btn-next');
        var btnPrev = document.querySelectorAll('.xb-btn-prev');
        for (var i = 0; i < btnNext.length; i++) {
            btnNext[i].addEventListener("touchstart", function(e) {
                e.preventDefault();
                nextButton.click();
            })
        }
        for (var i = 0; i < btnPrev.length; i++) {
            btnPrev[i].addEventListener("touchstart", function(e) {
                e.preventDefault();
                prevButton.click();
            })
        }

        window.onload = function() {
            $(function() {
                $("#doc-vld-msg").validator({
                    onValid: function(a) {
                        $(a.field).closest(".am-form-group").find(".am-alert").hide()
                    },
                    onInValid: function(a) {
                        var i = $(a.field),
                            d = i.closest(".am-form-group"),
                            e = d.find(".am-alert"),
                            l = i.data("validationMessage") || this.getValidationMessage(a);
                        e.length || (e = $('<div class="am-alert am-alert-danger"></div>').hide().appendTo(d)), e.html(l).show()
                    }
                })
            })
        }
        </script>
    </section>
    <!-- end contain -->
    <!-- common footer -->
    <footer class="xb-logo">
        <div class="am-g">
            <div class="am-u-sm-6 am-u-sm-offset-3">
                <img src="/images/logo.jpg" alt="">
            </div>
        </div>
    </footer>
    <!-- end footer -->
</body>

</html>